(async () => {
  const browser = await puppeteer.launch({ headless: false });
  const page = await browser.newPage();

  for (const company of companies) {
    const companyInfo = await scrapeLinkedInInfo(page, company);
    console.log(companyInfo);

    // Save the information to a CSV file
    await saveToCSV(companyInfo);
  }

  await browser.close();
})();

async function scrapeLinkedInInfo(page, companyName) {
  const url = `https://www.linkedin.com/search/results/companies/?keywords=${encodeURIComponent(companyName)}`;
  await page.goto(url);
  await page.waitForSelector('.search-result__info');

  const companyData = await page.evaluate(() => {
    const companyElement = document.querySelector('.search-result__info');
    if (!companyElement) return null;

    const name = companyElement.querySelector('.actor-name').textContent.trim();
    const website = companyElement.querySelector('.subline-level-2').textContent.trim();
    const linkedinUrl = companyElement.querySelector('.search-result__result-link').href;

    // Add logic to extract contact information, email, and phone details

    return { name, website, linkedinUrl };
  });

  return companyData;
}  

async function saveToCSV(companyInfo) {
  const csvHeader = 'Company Name,Website,LinkedIn URL\n';
  const csvData = `${companyInfo.name},"${companyInfo.website}","${companyInfo.linkedinUrl}"\n`;

  try {
    await writeFileAsync('output.csv', csvHeader + csvData, { flag: 'a' });
    console.log('Data saved to CSV successfully.');
  } catch (err) {
    console.error('Error saving data to CSV:', err);  
  }
}
